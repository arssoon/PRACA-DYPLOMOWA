               <font>
                  <Font name="System Bold" size="18.0" />
               </font></Button>
            <TextArea fx:id="textAreaOutput" layoutX="18.0" layoutY="315.0" prefHeight="412.0" prefWidth="668.0" style="-fx-background-color: #E45652;" wrapText="true" />
            <Button fx:id="listNetworkDevices" layoutX="638.0" layoutY="17.0" mnemonicParsing="false" onAction="#ListNetworkInterfaces" prefHeight="39.0" prefWidth="144.0" style="-fx-background-color: e1e1e1;" text="List Devices" textFill="#e45652">
