<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>

<AnchorPane style="-fx-background-color: #20120F;" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.VisualisationController">
   <children>
      <Pane prefHeight="800.0" prefWidth="1000.0">
         <children>
            <Button fx:id="startCaptureButton" layoutX="14.0" layoutY="113.0" mnemonicParsing="false" onAction="#StartCapturePacket" prefHeight="39.0" prefWidth="144.0" style="-fx-background-color: #E45652;" text="START" textFill="WHITE">
               <font>
                  <Font name="System Bold" size="18.0" />
               </font></Button>
            <Button fx:id="stopCaptureButton" layoutX="14.0" layoutY="160.0" mnemonicParsing="false" onAction="#StopCapturePacket" prefHeight="39.0" prefWidth="144.0" style="-fx-background-color: e1e1e1;" text="STOP" textFill="#e45652">
               <font>
                  <Font name="System Bold" size="18.0" />
               </font></Button>
            <TextArea fx:id="textAreaOutput" layoutX="18.0" layoutY="315.0" prefHeight="412.0" prefWidth="668.0" style="-fx-background-color: #E45652;" wrapText="true" />
            <Button fx:id="listNetworkDevices" layoutX="183.0" layoutY="117.0" mnemonicParsing="false" onAction="#ListNetworkInterfaces" prefHeight="31.0" prefWidth="130.0" style="-fx-background-color: #E45652;" text="List Devices" textFill="WHITE" />
            <Label fx:id="closeLabel" layoutX="968.0" layoutY="7.0" onMouseClicked="#handleClose" prefHeight="8.0" prefWidth="7.0" text="X" textFill="#b53131">
               <font>
                  <Font name="System Bold" size="29.0" />
               </font>
            </Label>
            <Button fx:id="backButton" layoutX="908.0" layoutY="748.0" mnemonicParsing="false" onAction="#backToMenu" style="-fx-background-color: #E45652;" text="BACK" textFill="WHITE">
               <font>
                  <Font name="System Bold" size="17.0" />
               </font>
            </Button>
            <ComboBox fx:id="devicesComboBox" layoutX="22.0" layoutY="19.0" onAction="#chooseNetworkDevice" prefHeight="31.0" prefWidth="801.0" promptText="Please, choose your network devices ..." />
            <TextArea fx:id="textAreaInfo" layoutX="694.0" layoutY="315.0" prefHeight="412.0" prefWidth="289.0" wrapText="true" />
         </children>
      </Pane>
   </children>
</AnchorPane>
